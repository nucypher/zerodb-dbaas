<html lang="en" metal:use-macro="dashboard">
	<title metal:fill-slot="title">
		Overview
	</title>

	<div metal:fill-slot="content" class="col-sm-9 content">
		<div class="dashhead">
			<div class="dashhead-titles">
				<h6 class="dashhead-subtitle">Dashboards</h6>
				<h2 class="dashhead-title">Overview</h2>
			</div>

			<div class="btn-toolbar dashhead-toolbar">
				<button type="button" class="btn btn-lg btn-pill btn-primary" data-toggle="modal" data-target="#instanceModal"><span class="icon icon-database"> Launch instance</span></button>
			</div>
		</div>

		<hr class="m-t">

		<div class="list-group">
			<h4 class="list-group-header">
				Deployments
			</h4>

			<a class="list-group-item"
tal:repeat="db_id db_users"
tal:attributes="href string:instance/${db_id}">
				<span class="pull-right text-muted">2GB</span>
                <span class="icon icon-check"> Instance ${db_id}
			</a>
		</div>
	</div>

	<div metal:fill-slot="extra" id="instanceModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="instanceModalLabel">
		<div class="modal-dialog">
			<div class="modal-content">

				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="instanceModalLabel">Choose your instance</h4>
					<p>All instances are t2.large running on AWS</p>
				</div>
				<div class="modal-body">
					<div class="row statcards">
						<div class="col-sm-12 col-lg-4 m-b">
							<div class="statcard statcard-success">
								<div class="p-a">
									<span class="statcard-desc">2GB</span>
									<h2 class="statcard-number">
										$25
									</h2>
									<span class="statcard-desc">per month</span>
									<form action="/create_2gb_instance" method="POST" data-dismiss="modal">
									  <script
									    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
									    data-key="pk_test_a5PvmhImTHCrmhz852eOWS6l"
									    data-amount="2500"
									    data-name="ZeroDB, Inc."
									    data-description="2GB subscription"
									    data-image="assets/img/zerodb.svg"
									    data-locale="auto"
									    data-zip-code="true">
									  </script>
									</form>
								</div>
							</div>
						</div>
						<div class="col-sm-12 col-lg-4 m-b">
							<div class="statcard statcard-danger">
								<div class="p-a">
									<span class="statcard-desc">4GB</span>
									<h2 class="statcard-number">
										$40
									</h2>
									<span class="statcard-desc">per month</span>
									<form action="/create_4gb_instance" method="POST" data-dismiss="modal">
									  <script
									    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
									    data-key="pk_test_a5PvmhImTHCrmhz852eOWS6l"
									    data-amount="4000"
									    data-name="ZeroDB, Inc."
									    data-description="4GB subscription"
									    data-image="assets/img/zerodb.svg"
									    data-locale="auto"
									    data-zip-code="true">
									  </script>
									</form>
								</div>
							</div>
						</div>
						<div class="col-sm-12 col-lg-4 m-b">
							<div class="statcard statcard-info">
								<div class="p-a">
									<span class="statcard-desc">8GB</span>
									<h2 class="statcard-number">
										$70
									</h2>
									<span class="statcard-desc">per month</span>
									<form action="/create_8gb_instance" method="POST" data-dismiss="modal">
									  <script
									    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
									    data-key="pk_test_a5PvmhImTHCrmhz852eOWS6l"
									    data-amount="7000"
									    data-name="ZeroDB, Inc."
									    data-description="8GB subscription"
									    data-image="assets/img/zerodb.svg"
									    data-locale="auto"
									    data-zip-code="true">
									  </script>
									</form>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</html>
